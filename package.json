{
  "name": "sogetisonft-contracts",
  "version": "1.0.0",
  "description": "Smart contracts and utilities for SogetiSoNFT Collection",
  "keywords": [
    "Smart contracts",
    "ETH",
    "Solidity"
  ],
  "author": "TxZero",
  "scripts": {
    "build": "yarn hardhat compile",
    "deploy-mumbai": "yarn hardhat deploy --network mumbai",
    "deploy-rinkeby": "yarn hardhat deploy --network rinkeby",
    "deploy-polygon": "yarn hardhat deploy --network polygon",
    "lint": "solhint 'contracts/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "yarn prettier --write .",
    "typechain": "yarn hardhat typechain",
    "ci:clean": "rm -rf ./artifacts ./cache .;types"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.34",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "erc721a": "^3.3.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.6",
    "hardhat": "^2.9.5",
    "hardhat-deploy": "^0.11.5",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  }
}
